	"item": [
		{
			"name": "用户相关",
			"item": [
				{
					"name": "用户注册",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"nickname\": \"测试用户\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/register",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "register"]
						}
					}
				},
				{
					"name": "用户登录",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set('token', jsonData.data.token);",
									"        pm.environment.set('user_id', jsonData.data.userId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/login",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "login"]
						}
					}
				},
				{
					"name": "获取用户信息",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "{{user_id}}"]
						}
					}
				},
				{
					"name": "修改密码",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "oldPassword",
									"value": "password123",
									"type": "text"
								},
								{
									"key": "newPassword",
									"value": "newpassword123",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/user/change-password",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "change-password"]
						}
					}
				}
			]
		},
		{
			"name": "文档相关",
			"item": [
				{
					"name": "创建文档",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.id) {",
									"        pm.environment.set('document_id', jsonData.data.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"我的第一个文档\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/documents",
							"host": ["{{base_url}}"],
							"path": ["api", "documents"]
						}
					}
				},
				{
					"name": "获取文档",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/documents/{{document_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "documents", "{{document_id}}"]
						}
					}
				},
				{
					"name": "获取用户的所有文档",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/documents/user/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "documents", "user", "{{user_id}}"]
						}
					}
				},
				{
					"name": "删除文档",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/documents/{{document_id}}?userId={{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "documents", "{{document_id}}"],
							"query": [
								{
									"key": "userId",
									"value": "{{user_id}}"
								}
							]
						}
					}
				}
			]
		},
